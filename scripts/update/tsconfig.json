{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "sourceMap": false
  },
  "include": ["./update.ts"],
  "exclude": ["node_modules", "dist", "scripts/update.js"]
}
